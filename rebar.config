{erl_opts, [warnings_as_errors]}.
{deps, [base64url, jsx]}.
{plugins, [rebar3_hex, coveralls, rebar3_ex_doc]}.
{eunit_compile_opts, [export_all]}.

{profiles, [
    {edown, [
        {deps, [
            {edown, "0.8.1"}
        ]},
        {edoc_opts, [
            {doclet, edown_doclet},
            {top_level_readme,
                {"./README.md", "http://github.com/artemeff/jwt", "master"}}
        ]}
    ]}
]}.

{ex_doc, [
    {source_url, "https://github.com/artemeff/jwt"},
    {output, "doc"}
]}.

{edoc_opts, [
    {dir, "edoc"},
    {overview, "edoc/overview.edoc"}
]}.

{provider_hooks, [
    {post, [
        {edoc, {eep48, ex_doc}}
    ]}
]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{coveralls_coverdata, "_build/test/cover/eunit.coverdata"}.
{coveralls_service_name, "travis-ci"}.
